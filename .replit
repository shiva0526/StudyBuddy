modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["python_openai:1.0.0", "python_log_in_with_replit:1.0.0", "python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "swig", "xcbuild"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StudyBuddy"

[[workflows.workflow]]
name = "StudyBuddy"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"python start_backend.py & cd frontend && npm run dev\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 44733
externalPort = 3000
